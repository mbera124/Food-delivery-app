<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddBreakfast">
    <LinearLayout
        android:id="@+id/layout_button"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnselect"
            android:text="Select Image"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <ImageView
            android:id="@+id/imgbreakfast"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/raspberry"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Breakfast Name"
            android:textColorHint="@color/Black"
            android:id="@+id/etbreakfastname"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Breakfast Id"
            android:textColorHint="@color/Black"
            android:id="@+id/etbreakfastid"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Breakfast Price"
            android:textColorHint="@color/Black"
            android:id="@+id/etbreakfastprice"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Breakfast Description"
            android:textColorHint="@color/Black"
            android:id="@+id/etbreakfastdescription"
            />
        <Button
            android:id="@+id/btnsave"
            android:text="Save"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>